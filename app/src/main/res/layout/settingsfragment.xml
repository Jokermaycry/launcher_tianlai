                <TextView
                    android:id="@+id/l_settings_3_text_hide"
                    android:layout_width="1dip"
                    android:layout_height="1dip"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

