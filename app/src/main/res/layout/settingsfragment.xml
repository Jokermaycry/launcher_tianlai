                <TextView
                    android:id="@+id/l_settings_5_text_hide"
                    android:layout_width="1dip"
                    android:layout_height="1dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_settingsapp6"
                android:layout_width="wrap_content"
