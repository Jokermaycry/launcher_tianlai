<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_pingbao "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/pingbao_selector"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_start_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/start_app_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_one_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/one_clean_selector" />

            <ImageButton
                android:id="@+id/btn_rili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rili_selector"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_settingsadd_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/add_app_selector" />

            <LinearLayout
                android:id="@+id/linear_settingsapp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/kuaijie_app_selector"
                android:gravity="center"
                android:clickable="true"
            	android:focusable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/l_settings_1_image"
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:layout_marginTop="8dip" />

                <TextView
                    android:id="@+id/l_settings_1_text"
                    android:layout_width="144dip"
                    android:layout_height="32dip"
                    android:layout_marginTop="20dip"
                    android:ellipsize="marquee"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="19dip" />

                <TextView
                    android:id="@+id/l_settings_1_text_hide"
                    android:layout_width="1dip"
                    android:layout_height="1dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_settingsapp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/kuaijie_app_selector"
                android:gravity="center"
                android:clickable="true"
            	android:focusable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/l_settings_2_image"
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:layout_marginTop="8dip" />

                <TextView
                    android:id="@+id/l_settings_2_text"
                    android:layout_width="144dip"
                    android:layout_height="32dip"
                    android:layout_marginTop="20dip"
                    android:ellipsize="marquee"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="19dip" />

                <TextView
                    android:id="@+id/l_settings_2_text_hide"
                    android:layout_width="1dip"
                    android:layout_height="1dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_settingsapp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
