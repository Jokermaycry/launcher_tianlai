<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
   >
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.tianlai.MusicPlayerFragment"
        android:id="@+id/fragment_player"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--时间-->
            <TextView
                android:id="@+id/date"
                android:text="11:12"
                android:textSize="70dp"
                android:textColor="@color/snow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--时间-->
            <TextView
                android:id="@+id/time"
                android:text="2011年11月30日（星期三）"
                android:textSize="15dp"
                android:textColor="@color/snow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/week"
                android:text="2011年11月30日（星期三）"
                android:textSize="15dp"
                android:textColor="@color/snow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--天气-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="right"
            >
            <ImageView
                android:id="@+id/weather_icon02"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/weathericon_condition_02" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chengshi"
                    android:textSize="15dp"
                    android:textColor="@color/snow"
                    android:text="深圳" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weathers"
                    android:textSize="15dp"
                    android:text="多云"
                    android:textColor="@color/snow"
                    android:layout_marginLeft="10dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp1"
                    android:textSize="15dp"
                    android:text="6℃~"
                    android:textColor="@color/snow"
                    android:layout_marginLeft="10dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/xian"
                    android:textSize="15dp"
                    android:text="-"
                    android:textColor="@color/snow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp2"
                    android:textSize="15dp"
                    android:text="14℃"
                    android:textColor="@color/snow"
                  />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:src="@drawable/anim_sider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_anim_sider"
        android:layout_centerVertical="true"/>

    <!--<android.support.v4.widget.DrawerLayout-->
        <!--android:id="@+id/layout_drawer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="left"-->
        <!--android:layout_marginBottom="60dp">-->

        <!--&lt;!&ndash;<include layout="@layout/layout_sideslip" />&ndash;&gt;-->

    <!--</android.support.v4.widget.DrawerLayout>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/shape_divider_h"
        android:showDividers="beginning|middle|end">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bottom_1"
            android:layout_weight="1"
            android:background="@drawable/bottom_btn1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bottom_2"
            android:layout_weight="1"
            android:background="@drawable/bottom_btn2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bottom_3"
            android:layout_weight="1"
            android:background="@drawable/bottom_btn3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bottom_4"
            android:layout_weight="1"
            android:background="@drawable/bottom_btn4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bottom_5"
            android:layout_weight="1"
            android:background="@drawable/bottom_btn5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bottom_6"
            android:layout_weight="1"
            android:background="@drawable/bottom_btn6"/>
    </LinearLayout>


</RelativeLayout>