<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/music_bg"
    >
    
           <TextView 
            android:id="@+id/txt_music_sum"   
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲数目"   
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
               />
    
           <TextView 
        android:id="@+id/txt_path"
        android:textSize="25dp"
         android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="歌曲列表"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />
          <Button 
        android:id="@+id/btn_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/music_liebiao_selector"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/txt_path"
        android:layout_marginLeft="298dp"
         />  
           
        
 
  
    
     <ListView
            android:id="@+id/music_listview"
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:layout_below="@+id/txt_path"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:paddingRight="15dp"
            android:divider="@drawable/music_item_x_c"
            android:dividerHeight="1px"
            android:listSelector="@drawable/list_items" >
        </ListView>
    
    
    
</RelativeLayout>
